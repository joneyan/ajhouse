<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.aj.ajhouse.dao.QuestionMapper" >

    <sql id="Base_Column_List">
        qu.id, qu.ques_title as quesTitle, qu.ques_content as quesContent, qu.createtime ,qu.solvetime, qu.userid ,qu.status
    </sql>
    <!--<sql id="Blob_Column_List">
      p.param_data as paramData
    </sql>-->

    <select id="countQuestion" resultType="_int">
        select count(1)
        from aj_questions qu
    </select>


    <select id="listQuestionByPage" resultType="com.aj.ajhouse.pojo.po.AjQuestions">
        select
        <!--去重操作-->
        <if test="distinct">
            distinct
        </if>
        <include refid="Base_Column_List"/>
        <!--,
        <include refid="Blob_Column_List"/>-->

        from aj_questions qu /*left join tb_item_cat c on p.item_cat_id=c.id*/
        limit #{page.offset},#{page.rows}
    </select>

</mapper>